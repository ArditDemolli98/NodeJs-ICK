<%- include("../partials/head") %>
</head>
<body>
   <%- include("../partials/navigation") %>
    <main>
        <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
            <label for="prod-name">Product Name:</label>
            <input type="text" placeholder="Product name..." name="prodName" value="<%= oldInput.name %>">
            <br>
            <label for="prod-desc">Product Description:</label>
            <input type="text" placeholder="Product description..." name="prodDesc" value="<%= oldInput.description %>">
            <br>
            <label for="prod-price">Product Price:</label>
            <input type="number" step="0.01" placeholder="Product price..." name="prodPrice" value="<%= oldInput.price %>">
            <br>
            <label for="image">Image:</label>
            <input type="file" name="prodImage">
            <br>
            <button type="submit">Add Product</button>
            <%= error %>
        </form>
    </main>
</body>
</html>