<%- include("../partials/head") %>
</head>
<body>
   <%- include("../partials/navigation") %>
    <main>
        <form action="/admin/edit-product" method="POST">
            <input type="hidden" name="prodId" value = "<%= product._id %>" >
            <label for="prod-name">Product Name:</label>
            <input type="text" placeholder="Product name..." name="prodName" value="<%= product.name %>">
            <br>
            <label for="prod-desc">Product Description:</label>
            <input type="text" placeholder="Product description..." name="prodDesc" value="<%= product.description %>">
            <br>
            <label for="prod-price">Product Price:</label>
            <input type="number" step="0.01" placeholder="Product price..." name="prodPrice" value="<%= product.price %>">
            <br>
            <button type="submit">Edit Product</button>
            <%= error %>
            
        </form>
    </main>
</body>
</html>